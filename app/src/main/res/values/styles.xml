<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="colorPrimary">@color/defaultPrimaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:colorForeground">@color/primaryTextColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>


    <!--To change action-bar's color, add a style to the action-bar itself then add it to the theme-->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/defaultPrimaryColor</item>
        <item name="android:backgroundStacked">@color/defaultPrimaryColor</item>
    </style>

    <style name="ActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/defaultPrimaryColor</item>
        <item name="colorPrimaryDark">@color/darkPrimaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:colorForeground">@color/primaryTextColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorSecondary">@color/darkSecondaryTextColor</item>
    </style>


</resources>
